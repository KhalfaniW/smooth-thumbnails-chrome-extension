{
  "manifest_version": 3,
  "name": "smooth-thumbnails",
  "description": "Make the youtube homepage more calm by graying out unviewed video thumbnails",
  "background": {"service_worker": "background.bundle.js"},
  "action": {
    "default_popup": "popup.html",
    "default_icon": "smooth-thumbnails-32.png"
  },
  "icons": {
    "32": "smooth-thumbnails-32.png",
    "128": "smooth-thumbnails-128.png"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://*.youtube.com/*", "https://*.youtube.com/*"]
}
